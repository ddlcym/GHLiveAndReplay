<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/eventitem_Linearlayout"
    android:orientation="horizontal" >
 
    <TextView android:id="@+id/epg_event_Tview_time"
	    android:layout_width="120dip"
		android:layout_height="40dip"
		android:textColor="@color/white"
		android:textSize="18sp"
		android:gravity="right|center_vertical"/>
    
 	<TextView android:id="@+id/epg_event_Tview_info"
	    android:layout_width="780dip"
		android:layout_height="40dip"
		android:textColor="@color/white"
		android:textSize="18sp"
		android:gravity="center"/>
 
 	<TextView android:id="@+id/epg_event_Tview_timer"
	    android:layout_width="157dip"
		android:layout_height="40dip"
		android:textColor="@color/white"
		android:textSize="18sp"
		android:gravity="left|center_vertical"/>

</LinearLayout>
