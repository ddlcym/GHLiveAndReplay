<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content" 
    android:layout_gravity="center"
    android:background="@drawable/ca_watch_bg" >     
    <TextView
        android:id="@+id/jiemuinfo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:textSize="@dimen/FONT_SIZE_SMALL"
        android:layout_marginTop="110dip"
        android:layout_marginLeft="80dip"/>
    <Button 
        android:id="@+id/guankanjiemu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="230dip"
        android:layout_marginLeft="150dip"
        android:background="@drawable/button_sure_selector"/>
        <Button 
        android:id="@+id/cancelguankanjiemu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="230dip"
        android:layout_marginLeft="380dip"
        android:background="@drawable/button_cancel_selector"/>
    <TextView android:layout_width="80dip"
        android:layout_height="40dip"
        android:id="@+id/idsecond"
        android:layout_marginTop="240dip"
        android:layout_marginLeft="260dip"
        android:gravity="center"
        android:textSize="20sp"
        android:textColor="@color/black"/>
</RelativeLayout>