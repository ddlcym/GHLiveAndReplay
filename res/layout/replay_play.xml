<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="fill_parent" >

    <SurfaceView
        android:id="@+id/surfaceView1"
        android:layout_width="match_parent"
        android:layout_height="match_parent" >
    </SurfaceView>

    <ImageView
        android:id="@+id/mute_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_marginRight="120dip"
        android:paddingTop="15dip"
        android:src="@drawable/mute_icon"
        android:visibility="gone" />

    <ImageView
        android:id="@+id/time_shift_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right|top"
        android:paddingRight="15dip"
        android:paddingTop="15dip"
        android:src="@drawable/back"
        android:visibility="gone" />

    <ImageView
        android:id="@+id/play_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:src="@drawable/play"
        android:visibility="gone" />

    <ImageView
        android:id="@+id/pause_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:src="@drawable/pause"
        android:visibility="gone" />

    <RelativeLayout
        android:id="@+id/down_dialog"
        android:layout_width="match_parent"
        android:layout_height="80dip"
        android:layout_gravity="bottom" >

        <SeekBar
            android:id="@+id/skbProgress"
            android:layout_width="match_parent"
            android:layout_height="30dip"
            android:layout_alignParentTop="true"
            android:clickable="false"
            android:focusable="false"
            android:max="1000"
            android:paddingLeft="10dip"
            android:paddingRight="10dip" />

        <!-- <LinearLayout -->
        <!-- android:id="@+id/entire_time_cont" -->
        <!-- android:layout_width="12dip" -->
        <!-- android:layout_height="wrap_content" -->
        <!-- android:orientation="horizontal" > -->

        <TextView
            android:id="@+id/video_timelength"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below="@id/skbProgress"
            android:paddingRight="30dip"
            android:text="test"
            android:textSize="25sp" />

        <TextView
            android:id="@+id/video_currenttime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/skbProgress"
            android:layout_toLeftOf="@id/video_timelength"
            android:text="00:00:00"
            android:textSize="25sp" />
        <!-- </LinearLayout> -->
    </RelativeLayout>

    <ImageView
        android:id="@+id/fast_forward"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:src="@drawable/fast_forward"
        android:visibility="gone" />

    <ImageView
        android:id="@+id/fast_backward"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:src="@drawable/fast_backward"
        android:visibility="gone" />

</FrameLayout>