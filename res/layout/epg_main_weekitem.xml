<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/epg_weekitemlayout"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical">
    
 	<TextView android:id="@+id/epg_week_Tview_date"
	    android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:textColor="@color/replay_channellist_text"
		android:textSize="22sp"
		android:layout_gravity="center"/>
    
 	<TextView android:id="@+id/epg_week_Tview_week"
	    android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:textColor="@color/replay_channellist_text"
		android:textSize="22sp"
		android:layout_gravity="center"/>
 	
 	 <ImageView android:id="@+id/epg_week_line"
	    android:layout_width="fill_parent"
	    android:layout_marginTop="5dip"
		android:layout_height="1dip"
		android:layout_gravity="bottom" /> 
 	
</LinearLayout>
